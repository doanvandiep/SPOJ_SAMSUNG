#include<iostream>
#include<cmath>
#include<stack>
#include<string>
#include<vector>
#include<map>
#include<queue>

using namespace std;
int n;

int main()
{
	int t;
	cin >> t;
	while(t--)
	{
		long long N, K;
		cin >> N >> K;
		for(int i=1;i<50;i++)
		{
			long long m=pow(2,i-1);
			if(K%m!=0)
			{
				cout << i-1 << endl;
				break;
			}
		}
	}
	system("pause");
}
